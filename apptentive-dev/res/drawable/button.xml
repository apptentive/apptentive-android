<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_body_pressed"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/button_border_pressed"
                    android:width="1dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_body_selected"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/button_border_selected"
                    android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_body"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/button_border"
                    android:width="1dp"/>
        </shape>
    </item>
</selector>