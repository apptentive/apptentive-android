    <!-- This is THE apptentive default theme specified in AndroidManifest.xml of Apptentive SDK.
         It will be applied first. Any styles here will be then overridden by styles defined in the
         default AppCompat theme of the host app,  then the ApptentiveBaseFrameTheme, then the
         ApptentiveThemeOverride, in that order.
         Note this theme is the base default theme used by all Android api versions, thus the name "Versioned".
         Any attribute listed will have different values in values-vxx folder
    -->
    <style name="ApptentiveTheme.Base.Versioned">
    </style>

    <style name="ApptentiveTheme.Base.Versioned.TranslucentStatus"/>

    <!-- Default theme used by image preview -->
    <style name="ApptentiveTheme.Base.Versioned.TranslucentStatus.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Fixed theme used by Apptentive about -->
    <style name="ApptentiveThemeAbout" parent="ApptentiveDefaultTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/apptentive_brand_red</item>
    </style>

    <!-- Default theme values that Apptentive interactions will always use, It won't be overridden by the app default theme -->
    <style name="ApptentiveBaseFrameTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="actionBarPopupTheme">@null</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- Requires API 11 -->
        <item name="android:dialogTheme">@style/Apptentive.Style.Dialog</item>
        <item name="alertDialogTheme">@style/Apptentive.Style.AlertDialog</item>
    </style>

    <style name="ApptentiveBaseDialogTheme">
        <item name="android:windowBackground">?attr/apptentiveWindowBackground</item>
    </style>
