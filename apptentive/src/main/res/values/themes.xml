    <!-- Chooses whether Apptentive UI defaults with a dark or light Theme. By default, Apptentive uses light theme.
      This theme will be merged with the default app material theme specified in the host app's manifest file.
     Host app should change this to inherit from ApptentiveDefaultTheme.Dark, if the app default theme is also a dark theme -->
    <style name="ApptentiveTheme" parent="ApptentiveDefaultTheme.Light.DarkActionBar"/>

    <!-- This Theme contains all attribute values shared by all api versions. Use this theme as the parent to define api specific ApptentiveTheme in values-vxx -->
    <style name="ApptentiveTheme.Base">
        <!-- Setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <!-- colorPrimaryDark is used for the status bar (with the battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/apptentive_color_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated used to tint widgets. -->
        <item name="colorAccent">@color/apptentive_color_accent</item>

        <!-- Needed since design support library 23.2.0 -->
        <item name="textColorError">@color/apptentive_validation_failed_color</item>

        <item name="apptentiveToolbarBackground">?attr/colorPrimary</item>
        <item name="apptentiveToolbarTitleTextAppearance">@style/Apptentive.TextAppearance.Toolbar</item>

        <item name="apptentiveViewBackground">?android:attr/colorBackground</item>

        <item name="apptentiveValidationFailedColor">@color/apptentive_validation_failed_color</item>
        <item name="apptentiveButtonTintColor">?attr/colorAccent</item>
        <item name="apptentiveButtonTintColorStateList">@color/apptentive_tinted_button</item>

