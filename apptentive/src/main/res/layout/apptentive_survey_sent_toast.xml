<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/survey_sent_toast_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="bottom"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="?attr/apptentiveSurveySentToastStyle"
                  android:gravity="center"
                  android:orientation="horizontal">
        <ImageView android:id="@+id/survey_sent_action_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/apptentive_check_icon"/>
        <TextView android:id="@+id/survey_sent_action_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="@style/Apptentive.TextAppearance.Subhead.SnackBar"
                  android:paddingLeft="24dp"
                  android:paddingStart="24dp"/>
    </LinearLayout>
</LinearLayout>