<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/apptentive_pinstripe_background">
	<RelativeLayout android:orientation="horizontal"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/apptentive_header_background">
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_centerInParent="true"
		          android:textStyle="bold"
		          android:text="@string/apptentive_about_title"
		          android:textSize="20sp"
		          android:textColor="#FFFFFF"/>
		<Button android:id="@+id/apptentive_button_about_okay"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="4dp"
		        android:paddingLeft="10dp"
		        android:paddingTop="6dp"
		        android:paddingRight="10dp"
		        android:paddingBottom="6dp"
		        android:textColor="#EEEEEE"
		        android:textSize="18sp"
		        android:textStyle="bold"
		        android:background="@drawable/apptentive_header_button"
		        android:text="@string/apptentive_about_header_button_okay_text"/>
	</RelativeLayout>
	<ImageView android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:maxHeight="10dp"
	           android:layout_gravity="center_horizontal"
	           android:paddingTop="15dp"
	           android:paddingBottom="15dp"
	           android:src="@drawable/apptentive_logo_bitmap"/>
	<TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:paddingTop="10dp"
	          android:paddingLeft="30dp"
	          android:paddingRight="30dp"
	          android:textSize="7pt"
	          android:textColor="#000000"
	          android:text="@string/apptentive_about_message_1"/>
	<TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:paddingTop="10dp"
	          android:paddingLeft="30dp"
	          android:paddingRight="30dp"
	          android:autoLink="web"
	          android:textColor="#004444"
	          android:textSize="6pt"
	          android:textStyle="bold"
	          android:text="@string/apptentive_about_message_2"/>
	<TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_gravity="left"
	          android:paddingTop="10dp"
	          android:paddingLeft="15dp"
	          android:paddingRight="30dp"
	          android:textColor="#004444"
	          android:textStyle="bold"
	          android:textSize="7pt"
	          android:text="Running Tasks"/>
	<TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_gravity="center_horizontal"
	          android:paddingTop="10dp"
	          android:paddingLeft="30dp"
	          android:paddingRight="30dp"
	          android:textColor="#000000"
	          android:textSize="7pt"
	          android:text="No feedback waiting to upload."/>
</LinearLayout>
